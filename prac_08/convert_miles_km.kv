BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.3
        TextInput:
            id: input_number
            text: ''
            size_hint_x: 3
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: "Up"
                color: (1, 1, 1, 1)
            Button:
                text: "Down"
                color: (1, 1, 1, 1)
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: app.output_kilometer
            on_press: app.convert_mil_to_km()
            color: (1, 1, 1, 1)
        Label:
            id: output_label
            color: (1, 0, 1, 1)